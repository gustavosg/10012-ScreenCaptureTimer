<Window x:Class="_10012_ScreenCaptureTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screen Capture Timer"
        Height="350"
        Width="525"
        xmlns:ribbon="http://schemas.microsoft.com/winfx/2006/xaml/presentation/ribbon">
    <Grid>

        <DockPanel LastChildFill="True">

            <ribbon:Ribbon Height="Auto"
                           FontSize="10"
                           HorizontalAlignment="Stretch"
                           Name="ribbon1"
                           VerticalAlignment="Top"
                           DockPanel.Dock="Top">
                <ribbon:RibbonTab Header="Arquivo">
                    <ribbon:RibbonButton Label="Tirar Foto"/>
                </ribbon:RibbonTab>
                <ribbon:RibbonTab Header="Configurações" />
                <ribbon:RibbonTab Header="Sobre" />


            </ribbon:Ribbon>
        </DockPanel>
    </Grid>
</Window>
